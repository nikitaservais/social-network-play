# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                              controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)

GET         /register                      controllers.RegisterController.register()
POST        /register                      controllers.RegisterController.registerSubmit()

GET         /login                         controllers.LoginController.login()
POST        /login                         controllers.LoginController.processLogin()

GET         /feed                          controllers.FeedController.index(sort: Option[String], ord: Option[String])

GET         /post/:id                      controllers.PostController.index(id: Long)
POST        /post/:id/like                 controllers.PostController.pressedLike(id: Long)
POST        /post/:id/addComment           controllers.PostController.addComment(id: Long)
POST        /post/:id/deleteComment        controllers.PostController.removeComment(id: Long, commentIndex: Int)

GET         /upload-post                   controllers.UploadPostController.index()
POST        /upload-post                   controllers.UploadPostController.upload()